generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id  Int    @id @default(autoincrement())
  uuid   String  @default(uuid())  @unique
  email  String?  @unique
  first_name  String
  last_name  String
  phone_number  String?
  role  Role   @default(USER)
  is_active  Boolean @default(true)
  password  String

  created_at  DateTime @default(now())
  update_at  DateTime @updatedAt
}

model Seed {
  id  Int     @id @default(autoincrement())
  uuid   String  @default(uuid())  @unique
  type String
  name String
  description String?
  price Int @default(0)
  stock Int  @default(0)
  sku SKU @default(KGS)


  created_at  DateTime @default(now())
  update_at  DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum SKU {
  GRAMS
  KGS
}